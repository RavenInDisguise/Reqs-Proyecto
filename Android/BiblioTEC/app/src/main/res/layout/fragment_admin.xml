<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.AdminFragment">

    <TextView
        android:id="@+id/admin_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/menuTitle"
        android:text="Menú"/>

    <ScrollView
        android:id="@+id/admin_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/admin_menu_title">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/MenuCategory">

                <TextView
                    style="@style/MenuCategoryText"
                    android:text="Estudiantes"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/MenuItem">

                    <ImageView
                        android:id="@+id/MenuStudentImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemImage"
                        android:src="@drawable/manage_people" />

                    <TextView
                        android:id="@+id/MenuStudentText"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemText"
                        app:layout_constraintStart_toEndOf="@+id/MenuStudentImage"
                        android:text="Gestionar estudiantes" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/MenuCategory">

                <TextView
                    style="@style/MenuCategoryText"
                    android:text="Cubículos"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/MenuItem">

                    <ImageView
                        android:id="@+id/MenuAddRoomImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemImage"
                        android:src="@drawable/add_room" />

                    <TextView
                        android:id="@+id/MenuAddRoomText"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemText"
                        app:layout_constraintStart_toEndOf="@+id/MenuAddRoomImage"
                        android:text="Añadir cubículo" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/MenuItem">

                    <ImageView
                        android:id="@+id/MenuManageRoomImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemImage"
                        android:src="@drawable/manage_rooms" />

                    <TextView
                        android:id="@+id/MenuManageRoomText"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemText"
                        app:layout_constraintStart_toEndOf="@+id/MenuManageRoomImage"
                        android:text="Gestionar cubículos" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/MenuCategory">

                <TextView
                    style="@style/MenuCategoryText"
                    android:text="Reservas"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/MenuItem">

                    <ImageView
                        android:id="@+id/MenuReservationImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemImage"
                        android:src="@drawable/calendar" />

                    <TextView
                        android:id="@+id/MenuReservationText"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemText"
                        app:layout_constraintStart_toEndOf="@+id/MenuReservationImage"
                        android:text="Gestionar reservas" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>