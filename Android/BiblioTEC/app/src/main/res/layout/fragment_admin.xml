<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.AdminFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/menuTitle"
                android:text="Menú"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/MenuCategory">

                <TextView
                    style="@style/MenuCategoryText"
                    android:text="Estudiantes" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ManageStudentsButton"
                    style="@style/MenuItem">

                    <ImageView
                        android:id="@+id/MenuStudentImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemImage"
                        android:src="@drawable/icon_manage_people" />

                    <TextView
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemText"
                        app:layout_constraintStart_toEndOf="@+id/MenuStudentImage"
                        android:text="Gestionar estudiantes" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/MenuCategory">

                <TextView
                    style="@style/MenuCategoryText"
                    android:text="Cubículos" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/AddRoomButton"
                    style="@style/MenuItem">

                    <ImageView
                        android:id="@+id/MenuAddRoomImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemImage"
                        android:src="@drawable/icon_add_room" />

                    <TextView
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemText"
                        app:layout_constraintStart_toEndOf="@+id/MenuAddRoomImage"
                        android:text="Añadir cubículo" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ManageRoomsButton"
                    style="@style/MenuItem">

                    <ImageView
                        android:id="@+id/MenuManageRoomImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemImage"
                        android:src="@drawable/icon_manage_rooms" />

                    <TextView
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemText"
                        app:layout_constraintStart_toEndOf="@+id/MenuManageRoomImage"
                        android:text="Gestionar cubículos" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/MenuCategory">

                <TextView
                    style="@style/MenuCategoryText"
                    android:text="Reservas" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ManageReservationsButton"
                    style="@style/MenuItem">

                    <ImageView
                        android:id="@+id/MenuReservationImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemImage"
                        android:src="@drawable/icon_edit_booking" />

                    <TextView
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/MenuItemText"
                        app:layout_constraintStart_toEndOf="@+id/MenuReservationImage"
                        android:text="Gestionar reservas" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>