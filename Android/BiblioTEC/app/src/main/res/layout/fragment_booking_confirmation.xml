<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="35dp"
            >

            <TextView
                android:id="@+id/confirmationTitle"
                style="@style/menuTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprobante"
                />
            <TextView
                android:id="@+id/cubicleNameT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CubÃ­culo:"
                style="@style/SectionTitle"/>
            <TextView
                android:id="@+id/cubiName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando..."
                android:textColor="@color/black"
                android:paddingStart="30dp"
                />
            <TextView
                android:id="@+id/titleCapacityCubi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacidad:"
                style="@style/SectionTitle"/>
            <TextView
                android:id="@+id/capacityCubi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando..."
                android:textColor="@color/black"
                android:paddingStart="30dp"
                />

            <TextView
                android:id="@+id/sericiosCubiculos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios especiales:"
                style="@style/SectionTitle"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/servicesCubiRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:paddingLeft="30dp"/>

            <TextView
                android:id="@+id/scheduleCubiTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario:"
                style="@style/SectionTitle"/>
            <TextView
                android:id="@+id/scheduleCubiReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Cargando..."
                android:textColor="@color/black"
                android:paddingStart="30dp"
                android:lineSpacingMultiplier="1.3" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_recent_history" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="20dp">
                <Button
                    android:id="@+id/btnReserveCubi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aceptar"
                    />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>